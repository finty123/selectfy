generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  role          String    @default("PARTNER") // ADMIN ou PARTNER
  status        String    @default("PENDING") // PENDING ou ACTIVE
  sales         Sale[]
  createdAt     DateTime  @default(now())
}

model Sale {
  id          String   @id @default(cuid())
  amount      Float
  commission  Float
  status      String   @default("APPROVED")
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
}